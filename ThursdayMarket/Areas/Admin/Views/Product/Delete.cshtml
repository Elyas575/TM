@model Product

<form method="post">
    <div class="container mt-4">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h2 class="card-title">Delete Product</h2>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label for="productName">Product Name</label>
                    <input id="productName" asp-for="Name" type="text" disabled class="form-control" />
                </div>
                <div class="form-group">
                    <label for="price">Price</label>
                    <input id="price" asp-for="Price" disabled class="form-control" />
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-md-6 mb-2">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-md-6">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary btn-block">Go to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>