@model IEnumerable<Product>

<div class="container mt-4">
    <div class="row">
        <div class="col-6">
            <h2>Product List</h2>
        </div>
        <div class="col-6 text-end p-1 mb-2">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Product Price (Shekel)</th>
                <th>Product Weight (KG)</th>
                <th>Product Quantity</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Price </td>
                    <td>@product.Weight</td>
                    <td>@product.Quantity</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-primary btn-block">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger btn-block">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>