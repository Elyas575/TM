@model ProductVM

<form method="post">
    <div class="container mt-4">
        <div class="card border-primary">
            <div class="card-header bg-primary text-white">
                <h2 class="card-title">Edit Product</h2>
            </div>
            <input asp-for="Product.Id" hidden />

            <div class="card-body">
                <div class="form-group">
                    <label for="productName">Product Name</label>
                    <input id="productName" asp-for="Product.Name" name="Product.Name" type="text" class="form-control" />
                    <span asp-validation-for="Product.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="price">Price (Shekel)</label>
                    <input id="price" asp-for="Product.Price" name="Product.Price" class="form-control" />
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="quantity">Quantity</label>
                    <input id="quantity" asp-for="Product.Quantity" name="Product.Quantity" class="form-control" />
                    <span asp-validation-for="Product.Quantity" class="text-danger"></span>
                </div>

                <select id="category" asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-control border-0 shadow">
                    <option disabled selected>--Select Category--</option>
                </select>

                <div class="form-group">
                    <label for="weight">Weight</label>
                    <input id="weight" asp-for="Product.Weight" name="Product.Weight" class="form-control" />
                    <span asp-validation-for="Product.Weight" class="text-danger"></span>
                </div>

            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-md-6 mb-2">
                        <button type="submit" class="btn btn-primary form-control">Update</button>
                    </div>
                    <div class="col-md-6">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary btn-block">Go to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}