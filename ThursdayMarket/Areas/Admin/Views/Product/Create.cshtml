@model ProductVM

<form method="post" enctype="multipart/form-data">
    <div class="container mt-4">
        <div class="card border-primary">
            <div class="card-header bg-primary text-white">
                <h2 class="card-title">Create Product</h2>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label for="productName">Product Name</label>
                    <input id="productName" asp-for="Product.Name" type="text" class="shadow form-control" />
                    <span asp-validation-for="Product.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="price">Price (Shekel)</label>
                    <input id="price" asp-for="Product.Price" class="shadow form-control" />
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="quantity">Quantity</label>
                    <input id="quantity" asp-for="Product.Quantity" class="shadow form-control" />
                    <span asp-validation-for="Product.Quantity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="category">Category</label>
                    <select id="category" asp-for="@Model.Product.CategoryId" asp-items="@Model.CategoryList" class="form-control border-0 shadow">
                        <option disabled selected>--Select Category--</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="weight">Weight</label>
                    <input id="weight" asp-for="Product.Weight" class="form-control" />
                    <span asp-validation-for="Product.Weight" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.ImageUrl"></label>
                    <input type="file" class="form-control" />
                </div>

                <div class="form-group">
                    <label for="Description">Description</label>
                    <input id="Description" asp-for="Product.Description" class="shadow form-control" />
                    <span asp-validation-for="Product.Description" class="text-danger"></span>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-md-6 mb-2">
                        <button type="submit" class="btn btn-primary form-control shadow">Create</button>
                    </div>
                    <div class="col-md-6">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary btn-block">Go to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}